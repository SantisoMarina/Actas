            </a>

            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item ml-xl-2">
                    <a class="nav-link scroll" onclick="window.location.href = '@Url.Action("Index", "Home")'" title="Inicio" aria-label="Inicio" style="cursor:pointer">
                        Inicio
                    </a>
                </li>
                <li class="nav-item ml-xl-2">
                    <a class="nav-link scroll" onclick="window.location.href = '@Url.Action("CargarActa", "Acta")'" title="Cargar" aria-label="Cargar" style="cursor:pointer">
                        Cargar
                    </a>
                </li>
                <li class="nav-item ml-xl-2">
                    <a class="nav-link scroll" onclick="window.location.href = '@Url.Action("InicioSesion", "Usuario")'" title="Iniciar Sesión" aria-label="Iniciar Sesión" style="cursor:pointer">
                        Consultar
                    </a>
                </li>
                <li class="nav-item ml-xl-2">
                    <a class="nav-link scroll" onclick="window.location.href = '@Url.Action("InicioSesion", "Usuario")'" title="Iniciar Sesión" aria-label="Iniciar Sesión" style="cursor:pointer">
                        Modificar
                    </a>
                </li>
                <li class="nav-item ml-xl-2">
                    <a class="nav-link scroll" onclick="window.location.href = '@Url.Action("InicioSesion", "Usuario")'" title="Iniciar Sesión" aria-label="Iniciar Sesión" style="cursor:pointer">
                        Asignar actas
                    </a>
                </li>

            </ul>

        </nav>
        <script src="~/assets/js/jquery-2.2.4.min.js" type="text/javascript"></script>
        


    </header>
    @RenderBody()
    <!--   Core JS Files   -->

    <script src="~/assets/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/assets/js/jquery.bootstrap.js" type="text/javascript"></script>

    <!--  Plugin for the Wizard -->
    <script src="~/assets/js/material-bootstrap-wizard.js"></script>

    <!--  More information about jquery.validate here: http://jqueryvalidation.org/	 -->
    <script src="~/assets/js/jquery.validate.min.js"></script>

    <!-- <script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>-->
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>


    <script>
        $(function () {
            $('#btnInspectores').click(function () {
                $('#modalInspectores').modal('toggle');
                $.ajax({
                    url: "@(Url.Action("Inspector", "Acta"))",
                    type: 'GET',
                    cache: false,
                    success: function (result) {
                        $('#divInspector').html(result);
                    }
                });
                return false;
            });
        });

        //Función Ordenanza
                $(function () {
                    $('#btnOrdenanzas').click(function () {
                        $('#modalOrdenanzas').modal('toggle');
                $.ajax({
                    url: "@(Url.Action("Ordenanza", "Acta"))",
                    type: 'GET',
                    cache: false,
                    success: function (result) {
                        $('#divOrdenanzas').html(result);
                    }
                });
                return false;
                     });
               });

        //Función día actual
           $(function () {

                        var today = new Date();
                        var dd = String(today.getDate()).padStart(2, '0');
                        var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
                        var yyyy = today.getFullYear();
                        today = yyyy + '-' + mm + '-' + dd;


               document.getElementById("fechaCarga").setAttribute("max", today);
               document.getElementById("fecha").setAttribute("max", today);
               $('#btnFechaCarga').click(function () {
                   $("#fechaCarga").attr("value", today);
                   $("#fechaCarga").val(today);
                    });

                return false;
            });

        //Función hora actual
        $(function () {
            $('#btnHoraCarga').click(function () {
                var currentdate = new Date();
                var datetime = currentdate.getHours() + ":" + currentdate.getMinutes();
                $("#horaCarga").attr("value", datetime);
                $("#horaCarga").val(datetime);
            });

            return false;
        });

        //Función solo números 
       

    
    </script>

</body>
</html>
